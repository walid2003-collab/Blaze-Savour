{% doc %}
  @prompt
    Jumbo text with adjustable size, Perfect now i needto be able to pick the block alignment (right, centre or left), Its not responsive to my selections in the layout settings please fix that
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-jumbo-text-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.block_alignment }};
  }

  .ai-jumbo-text__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: {{ block.settings.line_height }};
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    word-wrap: break-word;
    overflow-wrap: break-word;
    display: inline-block;
  }

  @media screen and (max-width: 749px) {
    .ai-jumbo-text__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.6 }}px;
    }

    .ai-jumbo-text-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px 16px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-jumbo-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.text != blank %}
    <h1 class="ai-jumbo-text__heading-{{ ai_gen_id }}">{{ block.settings.text }}</h1>
  {% else %}
    <h1 class="ai-jumbo-text__heading-{{ ai_gen_id }}">Your jumbo text here</h1>
  {% endif %}
</div>

